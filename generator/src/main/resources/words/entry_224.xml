  <lemma>brumă</lemma>
   
  <!-- Assuming brimä -> brumă -->
  
  <pos>sf.</pos>
  
  <variants>[ar. mgl. &gt;]</variants>
  
  <definition>„Reif“</definition>
  
  <etymology>
    
    <etymon lang="Lat">BRŪMA, -AM</etymon>
     
    <!-- Assuming erüna -> BRŪMA -->
    
    <cognates>
      
      <form lang="alb">brymë</form>
      , 
      <!-- Assuming brüme, brime -> brymë -->
      
      <form lang="it">bruma</form>
      , 
      <form lang="a-berg">bruma</form>
      , 
      <form lang="pv">bruma</form>
      , 
